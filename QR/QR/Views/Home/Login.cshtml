@model User
@{
    ViewData["Title"] = "Index";
}

<h3>Current user</h3>
<div class="text-center">
    <div class="col-md-6 login-form-2">
        <div class="form-group">
            <label>@Model.id</label>
        </div>
        <div class="form-group">
            <label>@Model.username</label>
        </div>
        <div class="form-group">
            <label>@Model.lastcheckedin</label>
        </div>
    </div>
</div>
<h3>Current available QR</h3>
<div class="text-center">
    <img style="width:200px; height:200px;" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.qr))" />
</div>